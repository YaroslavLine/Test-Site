@inherits UmbracoViewPage<TeaserPageSection>

<section style="background: url('@(Model?.BackgroundGraphic?.Url()??"/img/svg/header-cubes.svg")') no-repeat;">
    <div class="container" id="header-container">
        <hr class="p-0 m-0" style="background: rgba(255, 255, 255, 0.5);height: 1px;">
        <div class="row p-0 m-0">
            <div class="col-12 col-md-9 mb-5 p-0 d-md-none d-block">
                <span class="nav-title display-5">
                    @Model.Title
                </span>
                <hr style="color:red" />
                <span class="display-6">@Model.Subtitle</span>
                <img src="@(Model?.SecondaryGraphic?.Url()??"/img/svg/swot.svg")" class="img-fluid m-3" height="220" width="220" alt="">
            </div>
            <div class="col-12 col-md-9 mt-5 ms-3 d-none d-md-block">
                <span class="display-4">
                    @Model.Title
                </span>
                <hr style="color:red" />
                <span class="display-6">@Model.Subtitle</span>
            </div>
            <div class="d-flex justify-content-end">
                <div class=" d-none d-md-block">
                    <img src="@(Model?.SecondaryGraphic?.Url()??"/img/svg/swot.svg")" class="img-fluid" height="550" width="550" alt="">
                </div>
            </div>
            <div class="d-flex justify-content-start">
                <a href="#" class="btn btn-warning btn-lg text-white shadow">@Umbraco.GetDictionaryValue("Link.LearnMore")</a>
            </div>
        </div>
    </div>
</section>
