@model IEnumerable<IPublishedElement>
@using Umbraco.Web.Models

<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
        <div class="container-fluid p-0">
            <div class="navbar-brand col-1">
                <a href="/">
                    <div style="float:left" id="logo">
                    </div>
                    <div>
                        <span class="logo-text">Salesmatrix.com </span><br>
                        <span class="small-logo-text">Sales intelligence made simple</span>
                    </div>
                </a>
            </div>
            <button class="navbar-toggler" style="border-color: transparent" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var link in Model)
                        {
                            var l = link.Value<Link>("PageLink");
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@l.Url">
                                    @l.Name
                                </a>
                            </li>
                        }
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-globe"></i>
                        </a>
                        <ul class="dropdown-menu bg-transparent" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/"><span class="text-dark">EN</span></a></li>
                            <li><a class="dropdown-item" href="/uk"><span class="text-dark">UK</span></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>